#: import ObjectProperty kivy.properties.StringProperty

AddTrainingLog:
	orientation: "vertical"
	log_date: date
	log_morning_pulse: morning_pulse
	log_training_type: training_type
	log_distance: distance
	log_executed_time: executed_time
	log_in_zone: in_zone
	log_average_heart: average_heart
	BoxLayout:
		Label:
			text: "Date"
		TextInput:
			id: date
	BoxLayout:
		Label:
			text: "Weather conditions"
		DropDown:
			Button:
				text: "Hot"
			Button:
				text: "Hurricane"	
	BoxLayout:
		Label:
			text: "Morning pulse"
		TextInput:
			id: morning_pulse
		Label:
			text: "bpm"
	BoxLayout:
		Label:
			text: "Type of training"
		Spinner:
			text: "Lange duur"
			values: ("Lange duur", "Intensief")
			id: training_type
	BoxLayout:
		Label:
			text: "Distance"
		TextInput:
			id: distance
		Label:
			text: "km"
	BoxLayout:
		Label:
			text: "Executed time"
		TextInput:
			id: executed_time
	BoxLayout:
		Label:
			text: "In zone"
		TextInput:
			id: in_zone
	BoxLayout:
		Label:
			text: "Average heart frequency"
		TextInput:
			id: average_heart
		Label:
			text: "bpm"
	BoxLayout:
		Button:
			text: "Done"
			on_press: root.on_submit()
