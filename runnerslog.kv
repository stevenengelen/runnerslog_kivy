# import ObjectProperty kivy.properties.StringProperty

<ScreenPicker>
	orientation: "vertical"
	BoxLayout:
		Button:
			pos: 0, 100
			size_hint: 1, .2
			text: "Add log"
			on_press: app.root.onAdd()
		Button:
			pos: 100, 0
			size_hint: 1, .2
			text: "View log"
			on_press: app.root.onView()

<AddTrainingLog>
	orientation: "vertical"
	ScreenPicker:
	BoxLayout:
		orientation: "horizontal"
		BoxLayout:
			orientation: "vertical"
			log_date: date
			log_morning_pulse: morning_pulse
			log_training_type: training_type
			log_distance: distance
			log_executed_time: executed_time
			log_in_zone: in_zone
			log_average_heart: average_heart
			log_weather_type: weather_type
			Label:
				text: "Date"
			Label:
				text: "Weather conditions"
			Label:
				text: "Morning pulse"
			Label:
				text: "Type of training"
			Label:
				text: "Distance"
			Label:
				text: "Executed time"
			Label:
				text: "In zone"
			Label:
				text: "Average heart frequency"
		BoxLayout:
			orientation: "vertical"
			TextInput:
				id: date
			Spinner:
				text: "Hot"
				values: ("Hurricane", "Hot")
				id: weather_type 
			BoxLayout:
				orientation: "horizontal"
				TextInput:
					id: morning_pulse
				Label:
					size_hint: .3, 1
					text: "bpm"
			Spinner:
				text: "Lange duur"
				values: ("Lange duur", "Intensief")
				id: training_type
			BoxLayout:
				orientation: "horizontal"
				TextInput:
					id: distance
				Label:
					size_hint: .3, 1
					text: "km"
			TextInput:
				id: executed_time
			TextInput:
				id: in_zone
			BoxLayout:
				orientation: "horizontal"
				TextInput:
					id: average_heart
				Label:
					size_hint: .3, 1
					text: "bpm"
	BoxLayout:
		Button:
			size_hint: 1, .2
			text: "Done"
			on_press: root.on_submit()

<ConsultTrainingLog>
	orientation: "vertical"
	ScreenPicker:
	BoxLayout:
		orientation: "horizontal"
		BoxLayout:
			orientation: "vertical"
			Label:
				text: "Date"
			Label:
				text: "Weather conditions"
			Label:
				text: "Morning pulse"
			Label:
				text: "Type of training"
			Label:
				text: "Distance"
			Label:
				text: "Executed time"
			Label:
				text: "In zone"
			Label:
				text: "Average heart frequency"
			Button:
				text: "<"
		BoxLayout:
			orientation: "vertical"
			Label:
				text: root.date
			Label:
				text: root.weather_conditions
			Label:
				text: root.morning_pulse
			Label:
				text: root.training_type
			Label:
				text: root.distance
			Label:
				text: root.executed_time
			Label:
				text: root.in_zone
			Label:
				text: root.average_heart
			Button:
				text: ">"

<Layout>:
	canvas:
		Color:
			rgba: 0,0,0,0
		Rectangle:
			pos: self.pos
			size: self.size
